{
    "name": "__MSG_appName__",
    "version": "0.0.4",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "page": "pages/background.html"
    },
    "permissions": [
        "tabs",
        "contextMenus"
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "all_frames": true,
            "css": [
                "styles/main.css"
            ],
            "js": [
                "scripts/script.js"
            ]
        }
    ]
}